
   <h3>Invoices</h3>
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card grey lighten-4 hoverable">
                <div class="card-content">
                    <table id="invoicesTable" class="hover row-border">
                        <thead>
                            <tr>
                                <th class="center-align">Vendor</th>
                                <th class="center-align">Issue Date</th>
                                <th class="center-align">Due Date</th>
                                <th class="center-align">Subtotal</th>
                                <th class="center-align">Tax</th>
                                <th class="center-align">Total Balance Due</th>
                                <th class="center-align">Pay Status</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each invoices}}
                                <tr>
                                    <td class="center-align">{{vendorTo.vendorName}}</td>
                                    <td class="center-align">{{formatDate issueDate  'MMMM Do YYYY'}}</td>
                                    <td class="center-align">{{formatDate dueDate 'MMMM Do YYYY'}}</td>
                                    <td class="center-align">${{subtotal}}</td>
                                    <td class="center-align">${{taxAmount}}</td>
                                    <td class="center-align">${{amountDue}}</td>
                                    <td class="center-align"><img src="{{updateInvoiceStatus amountDue dueDate}}" alt="" class="stamp mt-1"></td>
                                    <td class="center-align"><a href="invoices/edit/{{_id}}" class="btn  light-blue darken-2 editInvoice"><i class="far fa-edit"></i></a></td>
                                    <td class="center-align"><a href="invoices/delete/{{_id}}"  class="btn red darken-4 deleteInvoice"><i class="far fa-trash-alt"></i></a></td>
                                </tr>
                            {{else}}

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



