                            <img src="{{business.businessImage}}" alt="" style="width:250px; height: 250px">   
                       </div>
                       <div class="row">
                           <div class="col l12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input type="text" name="businessName" class="validate businessName" value="{{business.businessName}}">
                                        <label for="businessName">Business Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input type="email" name="businessEmail" class="validate businessEmail" value="{{business.businessEmail}}">
                                        <label for="businessEmail">Email</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input type="tel" name='businessPhone' id="phone" class="validate businessPhone" value="{{business.businessPhone}}">
                                        <label for="businessPhone">Phone Number</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input type="text" name="businessAddress" class="validate businessAddress" value="{{business.businessAddress}}">
                                        <label for="businessAddress">Address</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input type="text" name="businessCity" class="validate businessCity" value="{{business.businessCity}}">
                                        <label for="businessCity">City</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6">
