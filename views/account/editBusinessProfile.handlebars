                                        <label for="businessState">State</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input type="number" name="businessZip" class="validate businessZip" value="{{business.businessZip}}">
                                        <label for="businessZip">Zip Code</label>
                                    </div>
                                </div> 
                           </div>
                       </div>
                </div>
            </div>    
        </div>
    </div> 
{{/if}}